<package>
  <name>thorp_simulation</name>
  <version>0.1.0</version>
  <description>STDR, Stage and Gazebo launchers and worlds for Thorp simulation</description>
  <maintainer email="jsantossimon@gmail.com">Jorge Santos Simón</maintainer>
  <author email="jsantossimon@gmail.com">Jorge Santos Simón</author> 

  <license>BSD</license>

  <url type="bugtracker">https://github.com/corot/thorp/issues</url>
  <url type="repository">https://github.com/corot/thorp</url>
  <url type="website">http://wiki.ros.org/thorp_simulation</url> 

  <buildtool_depend>catkin</buildtool_depend>
  
  <run_depend>thorp_bringup</run_depend>

  <run_depend>xacro</run_depend>
  <run_depend>stdr_server</run_depend>
  <run_depend>stdr_robot</run_depend>
  <run_depend>stdr_gui</run_depend>
  <run_depend>stage_ros</run_depend>
  <run_depend>gazebo_ros</run_depend>
  <run_depend>gazebo_ros_control</run_depend>
  <run_depend>gazebo_plugins</run_depend>
  <run_depend>turtlebot_gazebo</run_depend>
  <run_depend>hector_gazebo_plugins</run_depend>
  <run_depend>kobuki_gazebo_plugins</run_depend>
  <run_depend>robot_state_publisher</run_depend>
  <run_depend>turtlebot_description</run_depend>
  <run_depend>turtlebot_navigation</run_depend>
  <run_depend>diagnostic_aggregator</run_depend>
  <run_depend>rail_collada_models</run_depend>
  <run_depend>controller_manager</run_depend>
  <run_depend>effort_controllers</run_depend>
  <run_depend>position_controllers</run_depend>
  <run_depend>joint_state_controller</run_depend>
  <run_depend>joint_trajectory_controller</run_depend>

  <export>
    <gazebo_ros gazebo_model_path="${prefix}/worlds/gazebo/models"/>
  </export>
</package>
